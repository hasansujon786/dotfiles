{
  "suggest.enablePreview": true,
  // Prettier
  "prettier.semi": false,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "prettier.bracketSpacing": true,
  "prettier.statusItemText": "Pt",
  "prettier.disableSuccessMessage": true,
  "prettier.jsxSingleQuote": true,
  //"coc.preferences.formatOnSaveFiletypes": [
  //"css",
  //"markdown",
  //"javascript",
  //"graphql",
  //"html",
  //"yaml",
  //"json",
  //"python",
  //"java"
  //],

  // suggestions
  // "suggest.echodocSupport": true,
  // TODO add more labels and give them cool glyphs
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": ""
  },
  // snippets
  "snippets.userSnippetsDirectory": "~/dotfiles/nvim/snips",

  // diagnostics
  //"diagnostic.errorSign": "",
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",

  // list
  "list.indicator": ">",
  "list.selectedSignText": " ",
  "list.nextKeymap": "<C-n>",
  "list.previousKeymap": "<C-p>",
  "list.insertMappings": {
    "<C-r>": "do:refresh",
    "<C-j>": "normal:j",
    "<C-k>": "normal:k"
  },

  // emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },

  // yank
  "yank.highlight.duration": 300,
  "yank.enableCompletion": false,
  "yank.list.maxsize": 50,

  // vetur
  //"vetur.format.defaultFormatter.html": "prettier",
  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": { "wrap_attributes": "force-expand-multiline" },
    "prettyhtml": { "printWidth": 120, "singleQuote": true, "wrapAttributes": false, "sortAttributes": false },
    "prettier": { "printWidth": 120, "singleQuote": true, "semi": false, "bracketSpacing": true }
  }
}
