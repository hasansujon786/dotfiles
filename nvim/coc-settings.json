{
  "suggest.enablePreview": true,
  // Prettier
  "prettier.semi": false,
  "prettier.printWidth": 100,
  "prettier.singleQuote": true,
  "prettier.bracketSpacing": true,
  "prettier.statusItemText": "Pt",
  "prettier.disableSuccessMessage": true,
  "prettier.jsxSingleQuote": true,
  //"coc.preferences.formatOnSaveFiletypes": [
  //"css",
  //"markdown",
  //"javascript",
  //"graphql",
  //"html",
  //"yaml",
  //"json",
  //"python",
  //"java"
  //],

  // suggestions
  // "suggest.echodocSupport": true,
  "suggest.completionItemKindLabels": {
    "method": "  ",
    "function": "  ",
    "variable": "[]",
    "field": "  ",
    "typeParameter": "<>",
    "constant": "  ",
    "class": " פּ ",
    "interface": " 蘒",
    "struct": "  ",
    "event": "  ",
    "operator": "  ",
    "module": "  ",
    "property": "  ",
    "enum": " 練",
    "reference": "  ",
    "keyword": "  ",
    "file": "  ",
    "folder": " ﱮ ",
    "color": "  ",
    "unit": " 塞 ",
    "snippet": "  ",
    "text": "  ",
    "constructor": "  ",
    "value": "  ",
    "enumMember": "  "
  },
  // snippets
  "snippets.userSnippetsDirectory": "~/dotfiles/nvim/snips",

  // diagnostics
  //"diagnostic.errorSign": "",
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",

  // list
  "list.indicator": ">",
  "list.selectedSignText": " ",
  "list.nextKeymap": "<C-n>",
  "list.previousKeymap": "<C-p>",
  "list.insertMappings": {
    "<C-r>": "do:refresh",
    "<C-j>": "normal:j",
    "<C-k>": "normal:k"
  },

  // emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },
  "tailwindCSS.enable": true,
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.validate": true,

  // yank
  "yank.highlight.duration": 300,
  "yank.enableCompletion": false,
  "yank.list.maxsize": 50,

  // vetur
  //"vetur.format.defaultFormatter.html": "prettier",
  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": { "wrap_attributes": "force-expand-multiline" },
    "prettyhtml": { "printWidth": 120, "singleQuote": true, "wrapAttributes": false, "sortAttributes": false },
    "prettier": { "printWidth": 120, "singleQuote": true, "semi": false, "bracketSpacing": true }
  },

  // lua
  "Lua.diagnostics.globals": ["vim", "jit"]
}
