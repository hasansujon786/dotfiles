{
  "$schema": "https://aka.ms/terminal-profiles-schema",
  "defaultProfile": "{0caa0dad-35be-5f56-a8ff-afceeeaa6102}",
  "theme": "system",
  "launchMode": "default",
  "initialCols": 110,
  "initialRows": 28,
  "initialPosition": "80,30",
  "rowsToScroll": 20,
  "snapToGridOnResize": true,
  "copyOnSelect": true,
  "copyFormatting": false,
  "largePasteWarning": false,
  "multiLinePasteWarning": false,

  "profiles": {
    "defaults": {
      // Put settings here that you want to apply to all profiles.
      "font": {
        "face": "FiraCode NF",
        "weight": "medium",
        "size": 14
      },
      "padding": "0, 0, 0, 0",
      "cursorShape": "filledBox",
      //"startingDirectory": "%USERPROFILE%",
      "startingDirectory": "F:\\repoes",
      "scrollbarState": "hidden",
      "colorScheme": "One Half Dark",
      "tabColor": "#1F1F1F",
      //"tabColor": "#262626",
      //"opacity": 0,
      "useAcrylic": true,
      "acrylicOpacity": 0.75,
      "background": "#242b38"
    },
    "list": [
      {
        // Make changes here to the bash.exe profile.
        "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6102}",
        "name": "Bash",
        "tabTitle": "Bash",
        "suppressApplicationTitle": false,
        "commandline": "C:\\Program Files\\Git\\bin\\bash.exe",
        "hidden": false,
        "icon": "%USERPROFILE%/dotfiles/windows-terminal/ubuntu.png",
      },
      {
        // Make changes here to the powershell.exe profile.
        "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
        "name": "PowerShell",
        "commandline": "powershell.exe",
        "hidden": false
      },
      {
        // Make changes here to the cmd.exe profile.
        "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
        "name": "Command Prompt",
        "commandline": "cmd.exe",
        "hidden": false
      },
      {
        "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
        "hidden": true,
        "name": "Azure Cloud Shell",
        "source": "Windows.Terminal.Azure"
      }
    ]
  },
  "schemes": [],

  "keybindings": [
    { "keys": "ctrl+shift+c",   "command": { "action": "copy", "singleLine": false } },
    { "keys": "ctrl+shift+v",   "command": "paste" },
    { "keys": "ctrl+shift+f",   "command": "find" },
    { "keys": "ctrl+space",     "command": { "action": "sendInput", "input": "\u0011" } },
    { "keys": "ctrl+backspace", "command": { "action": "sendInput", "input": "\u0017" } },
    { "keys": "alt+enter",      "command": "toggleFullscreen" },
    // Tab Management
    { "keys": "alt+`",          "command": "nextTab" },
    { "keys": "alt+shift+`",    "command": "prevTab" },
    { "keys": "alt+]",          "command": "nextTab" },
    { "keys": "alt+[",          "command": "prevTab" },
    { "keys": "alt+\\",         "command": "tabSearch" },
    { "keys": "alt+f2",         "command": "openTabRenamer" },
    { "keys": "alt+shift+[",    "command": { "action": "moveTab", "direction": "backward" } },
    { "keys": "alt+shift+]",    "command": { "action": "moveTab", "direction": "forward" } },
    // Create Pane
    { "keys": "alt+shift+s",    "command": { "action": "splitPane", "split": "horizontal" } },
    { "keys": "alt+shift+v",    "command": { "action": "splitPane", "split": "vertical" } },
    { "keys": "alt+shift+d",    "command": { "action": "splitPane", "split": "auto", "splitMode": "duplicate" } },
    // Resize Pane
    { "keys": "alt+shift+-",    "command": { "action": "resizePane", "direction": "down" } },
    { "keys": "alt+shift+plus", "command": { "action": "resizePane", "direction": "up" } },
    { "keys": "alt+shift+,",    "command": { "action": "resizePane", "direction": "left" } },
    { "keys": "alt+shift+.",    "command": { "action": "resizePane", "direction": "right" } },
    // Jump to Pane
    { "keys": "alt+shift+h",    "command": { "action": "moveFocus", "direction": "left" } },
    { "keys": "alt+shift+j",    "command": { "action": "moveFocus", "direction": "down" } },
    { "keys": "alt+shift+k",    "command": { "action": "moveFocus", "direction": "up" } },
    { "keys": "alt+shift+l",    "command": { "action": "moveFocus", "direction": "right" } },

    // unbounds
    { "keys": "alt+space",      "command": "unbound"}
  ]
}
