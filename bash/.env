# default variables 
export EDITOR='nvim'

# fzf
export FZF_DEFAULT_COMMAND='rg --files --hidden -g "!{node_modules/*,.git/*,.cache/*}"'
export FZF_DEFAULT_OPTS='--color=dark,fg:-1,bg:-1,hl:#55B6C2,fg+:#E5C07B,bg+:#3E4452,hl+:#55B6C2,pointer:#E5C07B,info:#E06C75,prompt:#61AFEF,border:#5C6370,marker:#E06C75,spinner:#61afef,header:#5C6370,gutter:-1 --bind alt-a:select-all,alt-d:deselect-all'

export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
# export FZF_CTRL_T_OPTS="--preview 'bat --color=always --line-range :50 {}'"

# export FZF_ALT_C_COMMAND='rg --hidden --files --null | xargs -0 dirname | uniq'
export FZF_ALT_C_OPTS="--preview 'tree -C {} | head -50'"

# Android directories
export ANDROID_HOME=$HOME/Android/Sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools
# custom bin directory
export PATH=$PATH:$HOME/dotfiles/bin
export PATH=$PATH:$HOME/.emacs.d/bin/
export PATH=$PATH:$HOME/.cargo/bin

