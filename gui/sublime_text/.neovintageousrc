" Type :h vintageousrc for help.
let mapleader=<space>

nnoremap q <esc>
vnoremap q <esc>
noremap gl gt
noremap gh gT

noremap <leader>y "+y
noremap <leader>Y "+Y
noremap <leader>ip "+p
noremap <leader>iP "+P

" In file navigation
nnoremap <M-u> <C-u>
nnoremap <M-d> <C-d>
nnoremap <M-o> <C-d>

" File managing
nnoremap <leader>s :w<CR>
vnoremap <leader>s :w<CR>
nnoremap <leader><leader> :ShowOverlay overlay=goto show_files=true<CR>
nnoremap <leader>op :Neovintageous action=toggle_side_bar<CR>

" window managing
nnoremap <leader>h <C-w>h
nnoremap <leader>j <C-w>j
nnoremap <leader>k <C-w>k
nnoremap <leader>l <C-w>l
nnoremap <leader>q <C-w>c
nnoremap <leader>wo <C-w>o
nnoremap <leader>ww <C-w>w
nnoremap <leader>wc :CloseFile<CR>
nnoremap <leader>wh <C-w>h
nnoremap <leader>wj <C-w>j
nnoremap <leader>wk <C-w>k
nnoremap <leader>wl <C-w>l
nnoremap <leader>ws <C-w>s
nnoremap <leader>wv <C-w>v
nnoremap <Bslash> :ToggleZoomPane fraction=1<CR>
nnoremap <Bar> <C-w>=

nnoremap <A-.> :PanePaneResize dimension=width resize=increase<CR>
nnoremap <A-,> :PanePaneResize dimension=width resize=decrease<CR>
nnoremap <A-=> :PanePaneResize dimension=height resize=increase<CR>
nnoremap <A--> :PanePaneResize dimension=height resize=decrease<CR>
" :PanePaneResize dimension=width resize=equal<CR>
" :PanePaneResize dimension=height resize=equal<CR>

" bookmarks
" nnoremap <leader>m <C-f2>
nnoremap <leader>m :ToggleBookmark<CR>
" nnoremap <leader>k <f2>
" nnoremap <leader>j <S-f2>

" Special Commands
nnoremap <leader>v. :Neovintageous action=open_rc_file<CR>
nnoremap <leader>vR :Neovintageous action=reload_rc_file<CR>
" noremap <leader>hp :PasteFromHistory<CR>
nnoremap gb :FindUnderExpand<CR>
vnoremap gb :FindUnderExpand<CR>
nnoremap gi :GotoLastEditEnhanced<CR>
nnoremap gd <f12>


